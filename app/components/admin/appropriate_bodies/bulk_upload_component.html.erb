<%= batch_cards %>

<%= batch_details %>

<%=
  govuk_tabs do |tabs|
    if error_details
      tabs.with_tab(label: "Errors") do
        if error_details.render?
          error_details
        else
          tag.h3("No errors", class: "govuk-heading-m")
        end
      end
    end

    if induction_details
      tabs.with_tab(label: "Submitted inductions") do
        if induction_details.render?
          induction_details
        else
          tag.h3("No inductions", class: "govuk-heading-m")
        end
      end
    end
  end
%>
