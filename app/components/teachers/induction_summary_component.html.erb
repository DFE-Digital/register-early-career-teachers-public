<h2 class="govuk-heading-m">Induction summary</h2>
<%= govuk_summary_list do |sl| %>
  <% sl.with_row do |row| %>
    <% row.with_key do %>
      <%= govuk_visually_hidden('Induction') %> Start date
    <% end %>

    <% row.with_value(text: induction.induction_start_date.to_fs(:govuk)) %>
  <% end %>

  <% sl.with_row do |row| %>
    <% row.with_key do %>
      <%= govuk_visually_hidden('Induction') %> Status
    <% end %>

    <% row.with_value { status_tag } %>
  <% end %>

  <% sl.with_row do |row| %>
    <% if induction.has_extensions? %>
      <% row.with_key do %>
        <%= govuk_visually_hidden('Induction') %> Extended by
      <% end %>

      <% row.with_value do %>
        <%= induction_extensions.formatted_number_of_terms %>
      <% end %>

      <%= row.with_action(text: "View", visually_hidden_text: "extensions", href: ab_teacher_extensions_path(teacher_trn: teacher.trn), classes: 'govuk-link--no-visited-state') %>
    <% else %>
      <% row.with_key do %>
        <%= govuk_visually_hidden('Induction') %> Extended
      <% end %>

      <% row.with_value(text: "No") %>

      <% row.with_action(text: "Add", visually_hidden_text: "an extension", href: new_ab_teacher_extension_path(teacher.trn)) %>
    <% end %>
  <% end %>

  <% sl.with_row do |row| %>
    <% row.with_key(text: "Initial teacher training records") %>

    <% row.with_value do %>
      Future Teaching Scholars,<br/>
      Maths and English, ages 5-11<br/>
    <% end %>

    <% row.with_action(text: "View", visually_hidden_text: "ITT records", href: ab_teacher_initial_teacher_training_records_path(teacher), classes: 'govuk-link--no-visited-state') %>
  <% end %>
<% end %>
