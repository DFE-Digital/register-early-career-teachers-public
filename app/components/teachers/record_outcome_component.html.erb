<%= form_with(model: service, url:, method: :post) do |form| %>

  <%= content_for(:error_summary) { form.govuk_error_summary } %>

  <%=    
    if appropriate_body_mode? && failed?
      form.govuk_date_field(:fail_confirmation_sent_on,
        legend: { text: "When did you send written confirmation of their failed induction?" },
        hint: { text: helpers.teacher_induction_date_hint_text }) 
    end
  %>

  <%= render Teachers::OutcomeFormFieldsComponent.new(mode:, form:, appropriate_body:) %>

  <%= 
    if admin_mode? 
      render Admin::ContextFormFieldsComponent.new(form:) 
    end
  %>

  <%= form.govuk_submit submit_text, warning: failed? %>

<% end %>

