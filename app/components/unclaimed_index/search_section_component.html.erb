<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= form_with method: :get, url: form_url, local: true do |f| %>
      <div class="govuk-form-group">
        <label class="govuk-label govuk-label--s" for="q">
          Search by name or teacher reference number (TRN)
        </label>
        <div class="govuk-hint">Enter a name or TRN</div>
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <%= f.text_field("q",
                  value: query,
                  class: "govuk-input") %>
          </div>
          <div class="govuk-grid-column-one-third">
            <div class="govuk-button-group">
              <%= f.govuk_submit "Search", class: "govuk-!-margin-left-2" %>
              <%= govuk_button_link_to("Reset", form_url, secondary: true) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
