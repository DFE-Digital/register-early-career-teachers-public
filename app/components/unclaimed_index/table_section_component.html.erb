<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <% if ect_at_school_periods.any? %>
      <%= govuk_table(first_cell_is_header: false) do |table| %>
        <% table.with_head do |head| %>
          <% head.with_row do |row| %>
            <% row_component.headings.each do |heading| %>
              <% row.with_cell(text: heading, header: true, scope: "col") %>
            <% end %>
          <% end %>
        <% end %>

        <% table.with_body do |body| %>
          <% ect_at_school_periods.each do |ect_at_school_period| %>
            <% body.with_row do |row| %>
              <%= render row_component.new(row: row, ect_at_school_period: ect_at_school_period) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= govuk_pagination pagy: pagy %>
    <% else %>
      <p class="govuk-body">
        There are no ECTs to display.
      </p>
    <% end %>
  </div>
</div>
