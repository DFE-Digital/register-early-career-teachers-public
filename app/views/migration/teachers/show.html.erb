<% page_data(title: @teacher.full_name, backlink_href: migration_teachers_path(page: @page)) %>

<div class="migration-row">
  <div class="migration-column">
    <%= render partial: "user", locals: { user: @user } %>
  </div>
  <div class="migration-column">
    <%= render partial: "teacher", locals: { teacher: @teacher } %>
  </div>
</div>

<%= render partial: "ect_records", locals: { profile: @ect_profile } %>
<%= render partial: "mentor_records", locals: { profile: @mentor_profile } %>
<%= render partial: "failures", locals: { failures: @failures } %>

<% if make_gantt_chart? %>
  <% if @ect_profile.present? %>
    <h2 class="govuk-heading-m">ECT induction record data</h2>
    <%= tag.img(src: migration_legacy_profile_gantt_path(profile_id: @ect_profile), class: 'migration-gantt') %>
  <% end %>
  <% if @mentor_profile.present? %>
    <h2 class="govuk-heading-m">Mentor induction record data</h2>
    <%= tag.img(src: migration_legacy_profile_gantt_path(profile_id: @mentor_profile), class: 'migration-gantt') %>
  <% end %>
<% end %>
