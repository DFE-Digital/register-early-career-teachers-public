<%= render partial: '/layouts/shared/js_enabled' %>

<%= govuk_skip_link %>

<%= govuk_header(full_width_border: true, html_attributes: { class: [environment_specific_header_colour_class] }) do |header| %>
  <%= header.with_navigation_item(text: current_user.organisation_name, href: switch_role_path) if multi_role_user? %>
  <%= header.with_navigation_item(text: current_user.organisation_name) if single_role_user? %>
  <%= header.with_navigation_item(text: 'Sign out', href: current_user.sign_out_path) if authenticated? %>
<% end %>

<%=
  render Navigation::PrimaryNavigationComponent.new(
    current_path: request.fullpath,
    current_user: current_user
  )
%>
