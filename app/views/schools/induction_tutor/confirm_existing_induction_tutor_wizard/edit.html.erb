<% page_data(
    title: "Confirm induction tutor details",
    # error: @wizard.school.errors.present?
) %>

<p class="govuk-body">This person will be your main point of contact for early career 
training and induction. We share these details with your appropriate body and lead providers 
(if your school uses provider-led training programmes).</p>

<p class="govuk-body">Our records show that the following person is currently your schoolâ€™s induction tutor:</p>

<%= govuk_summary_list do |sl|
  sl.with_row do |row|
    row.with_key(text: "Name")
    row.with_value(text: @wizard.school.induction_tutor_name)
  end

  sl.with_row do |row|
    row.with_key(text: "Email")
    row.with_value(text: @wizard.school.induction_tutor_email)
  end
end %>  

<%= form_with(model: @wizard.current_step, url: @wizard.current_step_path) do |f| %>
  <%= content_for(:error_summary) { f.govuk_error_summary } %>

  <%= f.govuk_radio_buttons_fieldset :are_these_details_correct, legend: { text: "Are these details correct?" } do %>
    <%= f.govuk_radio_button :are_these_details_correct, true, label: { text: "Yes" }, link_errors: true %>
    <%= f.govuk_radio_button :are_these_details_correct, false, label: { text: "No" } do %>

      <p>Change induction tutor details.</p>
      <%= f.govuk_text_field :induction_tutor_name,
                             label: {
                               text: "Full name"
                             }
                            %>
       <%= f.govuk_text_field :induction_tutor_email,
                             label: {
                               text: "Email"
                             },
                             hint: {
                               text: "Do not use a generic email like headteacher@school.com"
                             } %>
    <% end %>
  <% end %>

  <%= f.govuk_submit 'Continue' %>
<% end %>
