<% page_data(title: "What training programme will #{@ect.full_name} follow?", error: @wizard.current_step.errors.present?, backlink_href: schools_register_ect_wizard_email_address_path) %>

<%= form_with(model: @wizard.current_step, url: @wizard.current_step_path) do |f| %>
  <%= content_for(:error_summary) { f.govuk_error_summary } %>

  <%= f.govuk_radio_buttons_fieldset :programme_type, legend: { text: "What training programme will #{@ect.full_name} follow?", hidden: true} do %>
    <%= f.govuk_radio_button :programme_type,
                             :provider_led,
                             label: { text: "Provider-led" },
                             hint: { text: "Your school will work with providers who will deliver early career framework based training funded by the Department for Education." },
                             link_errors: true %>
    <%= f.govuk_radio_button :programme_type,
                             :school_led,
                             label: { text: "School-led" },
                             hint: { text: "Your school will deliver training based on the early career framework." }
    %>
  <% end %>

  <%= f.govuk_submit "Continue" %>
<% end %>
