<% page_data(title: "Lead providers", breadcrumbs: @breadcrumbs) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-full">
    <%= govuk_table do |table|
      table.with_head do |head|
        head.with_row { |row| row.with_cell(text: "Lead provider") }
      end

      table.with_body do |body|
        @lead_providers.each do |lead_provider|
          body.with_row do |row|
            row.with_cell do
              govuk_link_to(
                lead_provider.name,
                "##{lead_provider.name.parameterize}",
              )
            end
          end
        end
      end
    end %>
  </div>
</div>
