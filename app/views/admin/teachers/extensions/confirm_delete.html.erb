<%
  page_data(
    title: "Are you sure you want to delete this extension?",
    caption: teacher_full_name(@teacher),
    caption_size: "m",
    backlink_href: admin_teacher_extensions_path(@teacher)
  )
%>

<%= govuk_summary_list do |sl|
  sl.with_row do |row|
    row.with_key(text: "Added on")
    row.with_value(text: @extension.created_at.to_date.to_fs(:govuk))
  end

  sl.with_row do |row|
    row.with_key(text: "Number of terms")
    row.with_value(text: "#{@extension.number_of_terms} terms")
  end
end %>

<%= govuk_button_to "Confirm deletion", admin_teacher_extension_path(@teacher, @extension), method: :delete, warning: true %>
