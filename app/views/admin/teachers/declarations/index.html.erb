<% page_data(
  title: teacher_full_name(@teacher),
  caption: teacher_trn(@teacher),
  caption_size: 'm',
  breadcrumbs: @breadcrumbs
) %>

<%= render 'admin/teachers/navigation', navigation_items: @navigation_items %>

<h2 class="govuk-heading-m">Declarations</h2>

<h3 class="govuk-heading-s">ECT training declarations</h3>

<% if @ect_declarations.any? %>
  <% @ect_declarations.each do |declaration| %>
    <%= render "admin/teachers/declarations/declaration", declaration: declaration %>
  <% end %>
<% else %>
  <p class="govuk-body">There are no ECT training declarations for <%= teacher_full_name(@teacher) %></p>
<% end %>

<h3 class="govuk-heading-s">Mentor training declarations</h3>

<% if @mentor_declarations.any? %>
  <% @mentor_declarations.each do |declaration| %>
    <%= render "admin/teachers/declarations/declaration", declaration: declaration %>
  <% end %>
<% else %>
  <p class="govuk-body">There are no mentor training declarations for <%= teacher_full_name(@teacher) %></p>
<% end %>
