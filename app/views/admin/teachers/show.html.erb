<%
  page_data(
    title: teacher_full_name(@teacher),
    caption: teacher_trn(@teacher),
    caption_size: 'm',
    error: false,
    backlink_href: admin_teachers_path(page: @page)
  )
%>

<%= render Teachers::DetailsComponent.new(teacher: @teacher) do |component|
  component.with_induction_summary { render(Teachers::Details::InductionSummaryComponent.new(teacher: @teacher, is_admin: true)) }
  component.with_current_induction_period { render(Teachers::Details::CurrentInductionPeriodComponent.new(teacher: @teacher, enable_edit: true)) }
  component.with_past_induction_periods { render(Teachers::Details::PastInductionPeriodsComponent.new(teacher: @teacher, enable_edit: true)) }
end %>

<%= govuk_warning_text(text: "Some of this teacher's records could not be migrated") if @teacher.has_migration_failures? %>
