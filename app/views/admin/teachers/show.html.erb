<%
  page_data(
    title: Teachers::Name.new(@teacher).full_name,
    caption: "TRN: #{@teacher.trn}",
    caption_size: 'm',
    error: false,
    backlink_href: admin_teachers_path(page: @page)
  )
%>

<%= render(Teachers::InductionSummaryComponent.new(teacher: @teacher)) %>
<%= render(Teachers::CurrentInductionPeriodComponent.new(teacher: @teacher)) %>
<%= render(Teachers::PastInductionPeriodsComponent.new(teacher: @teacher)) %>

<%= govuk_warning_text(text: "Some of this teacher's records could not be migrated") if @teacher.migration_failures.any? %>

<p class="govuk-body">
  <%= govuk_link_to "Migration detail", migration_teacher_details_path(@teacher, page: @page) %>
</p>
