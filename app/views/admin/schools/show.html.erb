<% page_data(
  title: @school.name,
  caption: "URN: #{@school.urn}",
  caption_size: "xl",
  header_size: "xl",
  breadcrumbs: @breadcrumbs
) %>

<%= govuk_tabs(title: nil) do |tabs| %>
  <% tabs.with_tab(label: "Overview") do %>
    <%= render Admin::Schools::OverviewComponent.new(school: @school) %>
  <% end %>

  <% tabs.with_tab(label: "Teachers") do %>
    <%= render Admin::Schools::TeachersTableComponent.new(school: @school) %>
  <% end %>

  <% tabs.with_tab(label: "Partnerships") do %>
    <p class="govuk-body">Partnership information will be available here in the future.</p>
  <% end %>
<% end %>
