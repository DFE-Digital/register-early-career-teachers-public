<% page_data(
  title: "Edit induction period",
  error: @induction_period.errors.present?
) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">Edit induction period</h1>

    <%= form_with model: [:admin, @induction_period.teacher, @induction_period], local: true do |f| %>
      <%= content_for(:error_summary) { f.govuk_error_summary } %>

      <%= f.govuk_date_field :started_on,
          legend: { text: "Start date", size: "m" } %>

      <%= f.govuk_date_field :finished_on,
          legend: { text: "End date", size: "m" } %>

      <%= f.govuk_number_field :number_of_terms,
          label: { text: "Number of terms", size: "m" },
          hint: { text: "Enter 0 if less than one full term, or a number with up to one decimal place (for example, 1.5)" },
          width: 4,
          min: 0,
          max: 12.0,
          step: 0.1 %>

      <%= f.govuk_radio_buttons_fieldset :induction_programme,
          legend: { text: "Induction programme", size: "m" } do %>
        <%= f.govuk_radio_button :induction_programme, 'fip', label: { text: "FIP" } %>
        <%= f.govuk_radio_button :induction_programme, 'cip', label: { text: "CIP" } %>
        <%= f.govuk_radio_button :induction_programme, 'diy', label: { text: "DIY" } %>
      <% end %>

      <%= f.submit "Update", class: "govuk-button" %>
    <% end %>
  </div>
</div>
