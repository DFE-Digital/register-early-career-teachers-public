<%
  page_data(
    title: "Process a group of ECTs",
    error: @pending_induction_submission_batch.errors.any?,
    backlink_href: ab_teachers_path
  )
%>

<%= form_with(model: @pending_induction_submission_batch, url: ab_imports_path, method: 'post') do |f| %>

  <%= content_for(:error_summary) { f.govuk_error_summary } %>

  <%= f.govuk_file_field :csv_file, 
    accept: '.csv', 
    label: { text: 'Attach a file' }, 
    hint: { text: 'File type must be a CSV' } 
  %>  
  
  <%= f.govuk_submit 'Upload CSV' %>
<% end %>
