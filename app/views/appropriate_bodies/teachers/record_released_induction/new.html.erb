<%
  page_data(
    title: "Release #{teacher_full_name(@teacher)}",
    error: @record_release.errors.any?,
    backlink_href: ab_teacher_path(@teacher)
  )
%>

<%= form_with(model: @record_release, url: ab_teacher_release_ect_path(@teacher)) do |form| %>
  <%= content_for(:error_summary) { form.govuk_error_summary } %>

  <%=
    render Teachers::OutcomeFormFieldsComponent.new(
        mode: :appropriate_body,
        form:,
        appropriate_body: @appropriate_body
      )
  %>

  <%= form.govuk_submit %>
<% end %>
