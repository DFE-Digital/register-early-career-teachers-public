<% if batch.no_valid_data? %>
  <%
    page_data(
      title: "CSV file summary",
      header: false
    )
  %>

  <h1 class='govuk-heading-l'>CSV file summary</h1>

  <p class='govuk-body'>
    Your CSV named '<%= batch.filename %>' has <%= pluralize(batch.pending_induction_submissions.with_errors.count, 'ECT') %> with errors.
  </p>

  <p class='govuk-body'>
    <%= govuk_link_to 'Download CSV with error messages included', ab_batch_claim_path(batch, format: :csv) %>.
    You'll need to fix these errors before you try again.
  </p>

  <p class='govuk-body'>
    <%= govuk_link_to 'Go back to your overview', ab_teachers_path %>
  </p>

<% else %>
  <%
    page_data(
      title: "ECTs successfully claimed",
      header: false
    )
  %>

  <%= govuk_panel(title_text: "ECTs successfully claimed") %>

  <p class='govuk-body'>
    You uploaded <%= pluralize(batch.pending_induction_submissions.without_errors.count, 'ECT record') %>.
  </p>

  <p class='govuk-body'>
    You can see these in your overview.
  </p>

  <% if batch.pending_induction_submissions.with_errors.any? %>
    <p class='govuk-body'>
      You had <%= pluralize(batch.pending_induction_submissions.with_errors.count, 'ECT') %> with errors.
    </p>

    <p class='govuk-body'>
      <%= govuk_link_to 'Download CSV with error messages included', ab_batch_claim_path(batch, format: :csv) %>.
      You'll need to fix these errors before you try again.
    </p>
  <% end %>

  <p class='govuk-body'>
    <%= govuk_link_to 'Go back to your overview', ab_teachers_path %>
  </p>
<% end %>
